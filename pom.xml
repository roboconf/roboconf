	<parent>
		<groupId>net.roboconf</groupId>
		<artifactId>roboconf-parent</artifactId>
		<version>1.5</version>
	</parent>

	<groupId>net.roboconf</groupId>
	<artifactId>roboconf-platform-parent</artifactId>
	<version>0.7-SNAPSHOT</version>
	<name>Roboconf :: Platform Parent</name>
	<packaging>pom</packaging>

